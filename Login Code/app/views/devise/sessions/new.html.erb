<div class="form-top">
  <div class="form-top-left">
    <h3>Login to our site</h3>
		<p>Enter Email and password to log on</p>
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <%= devise_error_messages! %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="input-group input-group-lg" style="padding: 10px;">
                <span class="input-group-addon" id="sizing-addon1">
                    <i class="fa fa-envelope"></i>
                </span>
                <%= f.email_field :email, autofocus: true,class:"form-control dear32", placeholder:"Email", style:"font-size:15px;padding: 5px 15px;color: #000;font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 400;" %>
         </div>

         <div class="input-group input-group-lg" style="padding: 10px;">
               <span class="input-group-addon" id="sizing-addon1">
                 <i class="fa fa-unlock"></i>
               </span>
               <%= f.password_field :password, autocomplete: "off",class:"form-control dear32", placeholder:"Password", style:"font-size:15px;padding: 5px 15px;color: #000;font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 400;" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <button type="reset" class="btn btn-dan" style="font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 400;">
          Reset &nbsp;&nbsp;
          <i class="fa fa-tripadvisor"></i>
        </button>
        <button type="submit" class="btn btn-pri" style="font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 400;">
                  Log me in &nbsp;&nbsp;
                  <i class="fa fa-sign-in"></i>
        </button>

<% end %>
<div class="panel-footer from-bottom">Not Registered? <%= render "devise/shared/links" %>
</div>
</div>
<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
</div>
</div>
