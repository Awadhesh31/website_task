

<div class="form-top">
  <div class="form-top-left">
      <h2>Forgot your password?</h2>
      <p>Enter Register Email</p>
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-group input-group-lg" style="padding: 10px;">
            <span class="input-group-addon" id="sizing-addon1">
                <i class="fa fa-envelope"></i>
            </span>
            <%= f.email_field :email, autofocus: true, class:"form-control dear32", placeholder:"Email",style:"font-size:15px;padding: 5px 15px;color: #000;font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 400;"%>
        </div>

        <%= button_tag(type: 'submit', class:"btn btn-dan") do %>
          Send me reset password instructions &nbsp;&nbsp;
            <i class="fa fa-sign-in"></i>
      <% end %>


      <% end %>

        <div class="panel-footer from-bottom">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        
          Registered? <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
      </div>
      </div>
